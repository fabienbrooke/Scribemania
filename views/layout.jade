doctype html

html

  head

    title Scribemania

    meta(name='description', content='Scribemania allows people to write and watch stories, fun or serious, evolve in real-time as they contribute to them.')
    meta(name="viewport", content="width=device-width")
    if _csrf
      meta(name='csrf-token', content='#{_csrf}')

    link(rel='icon', href='/images/scribemania-logo32.png')
    link(rel='stylesheet', href='/styles/main.css')
    link(rel='stylesheet', href='/vendor/font-awesome-4.0.3/css/font-awesome.min.css')

  body

    include header

    include navigation

    .content

      include alerts

      block content

    if user
      .init-data.init-user #{JSON.stringify(user)}

    script(src="/scripts-build/requirejs-config.js")
    script(data-main="/scripts-build/main", src="/vendor/requirejs.min.js")
