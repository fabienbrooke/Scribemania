extends layout
block content

  .content-header
    h2 Find new stories by genre

  form.genre-search(action="/genres", method="GET")
    input.genre-search-input(type="text", name="genre", autocomplete="off", autofocus="true")
    .search-button.button-icon
      a(title="Search", href="javascript:;")
        i.fa.fa-search

  if stories
    each story in stories
      include summary
    if stories.length < 1
      section
        h2 No #{searchTerm} stories available.
        p
          a(href="/new") Write your own!

  else
    section.popular-genres
      h2 Popular Genres
      each genre in genres
        a.genre-list(href="/genres/#{genre.name.toLowerCase()}", title="#{genre.name}") #{genre.name}
