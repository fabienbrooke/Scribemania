extends layout
block content

  form#signup-form(action="/join", method="POST")

    section.join
      h2 Join Scribemania

      label(for="username") Pen Name
      input#username(name="username", required, autofocus="true",  type="text")

      label(for="email") Email
      input#email(name="email", placeholder="you@domain.com", type="email")

      label(for="password") Password
      input#password(name="password", required, type="password")

      label(for="password-repeat") Repeat Password
      input#password-repeat(name="password-repeat", required, type="password")

      input(type='hidden', name='_csrf', value=_csrf)

      button(type="submit") Join

      a.join-link(href="/login") Already signed up?

  script(data-main="/scripts/join/main", src="/vendor/requirejs.min.js")