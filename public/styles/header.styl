h2
  font-size: 22px

header
  height: 50px
  z-index: 9
  position: fixed
  left: 0
  right: 0
  top: 0
  background: $scribemaniaGreen
  padding: 10px 0
  clear: both
  text-transform: uppercase
  font-family: $titleFont
  a:hover
    color: lighten($scribemaniaGreen, 90%)
  .logo
    display: inline-block
    background: url('/images/sheets/logos.svg') no-repeat -2px -55px
    height: 46px
    width: 196px
  .account-links
    color: rgba(#fafafa, 0.9)
    display: inline-block
    float: right
    line-height 56px
    h2
      font-size: 19px
      display: inline-block
      vertical-align: top
      margin-top: -3px
    .fa
      font-size: 24px
      margin-left: 15px

.header-titles
  width: 90%
  margin: 0 auto

.content-header
  position: relative
  text-align: center
  margin-top: 40px
  text-transform: uppercase
  font-family: $titleFont
  font-weight: 300
  h2
    display: inline-block
  .refresh-latest
    display: none
    border-radius: 25px
    position: absolute
    right: 0
    margin-right: 20px
    font-family: $storyFont
    width: 25px
    color: #006400
    &:hover
      color: lighten($sectionsLinks, 15%)


@media (max-width: 919px)
  header
    .logo
      background-position: -2px -2px
      width: 51px
      height: 51px

