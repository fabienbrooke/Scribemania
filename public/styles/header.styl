h2
  font-size: 22px

header
  height: 50px
  z-index: 9
  position: relative
  background: $scribemaniaGreen
  padding: 10px 0
  clear: both
  text-transform: uppercase
  font-family: $titleFont
  a:hover
    color: lighten($scribemaniaGreen, 90%)
  .logo
    background: url('/images/scribemania-white.png') no-repeat
    height: 50px
    max-width: 200px
  .account-links
    color: rgba(#fafafa, 0.9)
    display: inline-block
    float: right
    line-height 56px
    h2
      font-size: 19px
      display: inline-block
      vertical-align: top
      margin-top: -3px
    .fa
      font-size: 24px
      margin-left: 15px

.header-titles
  width: 90%
  margin: 0 auto

.content-header
  text-align: center
  margin-top: 40px
  text-transform: uppercase
  font-family: $titleFont
  font-weight: 300

@media (max-width: 919px)
  header
    .logo
      background-image: url('/images/scribemania-logo-white.png')
    .account-links .user-name
      display: none

