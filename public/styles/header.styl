header
  font-size: 28px
  font-size: 2.8rem
  background: $headerBG
  background: linear-gradient(top, lighten($headerBG, 5%), black)
  padding: 10px 0
  margin-bottom: 20px
  a
    color: lighten($scribemaniaGreen, 10%)
  a:hover
    color: lighten($scribemaniaGreen, 20%)
  h1
    margin-left: 20px
  h1, .user
    display: inline-block
  .user
    font-size: 24px
    font-size: 2.4rem
    float: right
    margin-right: 20px
    padding-top: 2px

h2
  font-size: 22px
  font: 2.2rem $titleFont
  font-weight: 100
  padding-bottom: 15px