@import "nib"

@import "font-faces"

$maxContentWidth = 900px
$navBGGradient = 0
$scribemaniaGreen = #2e7b2d
$scribemaniaBlue = #10363B
$storyBG = #F4F9F6
$headerBG = #1C1C1C
$storyFont = Museo300Regular, 'Helvetica Neue', 'Helvetica', Arial, sans-serif
$titleFont = Raleway, 'Helvetica Neue', 'Helvetica', Arial, sans-serif
$mediaQuerySmallWidth = 919px

body
  font: 15px $storyFont
  background-color: #fafafa

h2
  font-size: 22px

.content-header
  text-align: center
  margin-top: 40px

a
  text-decoration: none
  color: black
  transition: color 0.2s ease-in, background-color 0.2s ease-in, font-size 0.2s ease-in
  &:hover
    color: $scribemaniaGreen
    transition: color 0.2s ease-out, background-color 0.2s ease-out, font-size 0.2s ease-out

@import "header"

@import "button"

@import "navigation"

@import "login"

@import "sections"

@import "inputs"

@import "genre-search"

@import "alerts"

.join-link
  display: inline-block
  margin-top: 20px

.typekit-badge
  display: none !important