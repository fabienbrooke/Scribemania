@import "nib"

@import "font-faces"

$maxContentWidth = 900px
$navBGGradient = 0
$scribemaniaBlue = #10363B
$storyBG = #F4F9F6
$scribemaniaGreen = #1D3B32
$storyFont = Museo300Regular, 'Helvetica Neue', 'Helvetica', Arial, sans-serif
$titleFont = Raleway, 'Helvetica Neue', 'Helvetica', Arial, sans-serif
$bodyFontSize = 15px
$sectionsLinks = #2f5f2f
$mediaQuerySmallWidth = 919px
$hoverTransitionOff = color 0.2s ease-in, background-color 0.2s ease-in, font-size 0.2s ease-in
$hoverTransitionOn = color 0.2s ease-out, background-color 0.2s ease-out, font-size 0.2s ease-out

.init-data
  display: none

body
  font: $bodyFontSize $storyFont
  background-color: #fafafa

a
  text-decoration: none
  color: black
  transition: $hoverTransitionOff
  &:hover
    color: lighten($sectionsLinks, 15%)
    transition: $hoverTransitionOn

@import "header"

@import "button"

@import "navigation"

@import "login"

@import "sections"

@import "inputs"

@import "search"

@import "profile"

@import "token-input"

@import "alerts"