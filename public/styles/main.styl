@import "nib"

@import "font-faces"

$maxContentWidth = 900px
$navBGGradient = 0
$scribemaniaBlue = #10363B
$storyBG = #F4F9F6
$scribemaniaGreen = #1D3B32
$storyFont = Calluna, Georgia, serif
$titleFont = Helvetica, Arial, sans-serif
$titleAltFont = Lato, $titleFont
$bodyFontSize = 16px
$sectionsLinks = #2f5f2f
$mediaQuerySmallWidth = 919px
$hoverTransitionOff = color 0.2s, background-color 0.2s, font-size 0.2s

.init-data
  display: none

body
  font: $bodyFontSize $storyFont
  background-color: #fcfcfc

a
  text-decoration: none
  color: black
  transition: $hoverTransitionOff
  &:hover
    color: lighten($sectionsLinks, 15%)

@import "header"

@import "button"

@import "navigation"

@import "login"

@import "sections"

@import "inputs"

@import "search"

@import "profile"

@import "token-input"

@import "alerts"
