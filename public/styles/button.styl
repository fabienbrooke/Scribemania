button
  cursor: pointer
  text-transform: uppercase
  color: white
  border: none
  background-color: lighten($scribemaniaGreen, 15%)
  padding: 10px 18px
  min-width: 90px
  border-radius: 2px
  font: 14px $titleFont
  transition: background-color 0.2s
  &:hover
    background-color: lighten($scribemaniaGreen, 20%)

.button-icon
  font-size: 18px
  list-style: none
  display: inline-block
  background-color: black
  padding: 4px
  border-radius: 50px
  a
    display: inline-block
    padding: 9px
    background-color: #fafafa
    border-radius: 200px
    &:hover
      color: #fafafa
      background-color: lighten($scribemaniaGreen, 25%)
  .fa
    display: inline-block
    width: 1.25em
    text-align: center

.box-link
  float: left
  border-radius: 4px
  padding: 5px
  margin-right: 2%
  margin-bottom: 10px
  background-color: rgba($scribemaniaBlue, 0.1)
  &:hover
    background-color: rgba($scribemaniaBlue, 0.25)
