nav
  position: fixed
  bottom: 0
  left: 0
  right: 0
  z-index: 1
  background-color: rgba(white, 0.8)
  font-size: 1.8rem
  font-weight: 100
  text-align: center
  text-transform: uppercase
  padding: 8px 0
  border-top: 3px solid rgba(black, 0.85)
  li
    list-style: none
    display: inline-block
    height: 42px
    background-color: rgba(black, 0.85)
    padding: 4px
    margin: 0 5%
    border-radius: 50px
    a
      display: inline-block
      padding: 10px
      background-color: #ffffff
      border-radius: 50px
      &:hover
        color: #ffffff
        background-color: $scribemaniaDarkGreen