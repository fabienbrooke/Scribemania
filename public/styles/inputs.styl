label, input, textarea
  display: block
  &.user-warning
    border-color: $scribemaniaBlue
    color: $scribemaniaBlue
    box-shadow: 0 0 1px 1px lighten($scribemaniaBlue, 10%)
  &.user-error
    transition: none
    border-color: #a00000
    color: #a00000
    box-shadow: 0 0 1px 1px rgba(#a00000, 0.5)

label
  display: inline-block
  margin-bottom: 5px
  margin-top: 5px

.label-caption
  display: inline-block
  margin-left: 10px

input, .add-story textarea
  margin-bottom: 10px
  box-shadow: inset 0 1px 2px rgba(0,0,0,0.075)
  transition: background-color .3s ease-in-out, box-shadow .3s ease-in-out, border .3s ease-in-out
  &:focus
    color: black
    border: 1px solid lighten($scribemaniaGreen, 5%)
    box-shadow: inset 0 1px 2px rgba(0,0,0,0.075), 0 0 1px 1px rgba(lighten($scribemaniaGreen, 10%), 0.5)
    background-color: darken(white, 2%)
    transition: background-color .3s ease-out, box-shadow .3s ease-out, border .3s ease-out