#content
  margin-left: sum($navWidth 10)
  margin-right: 10px
  padding: 10px

section
  position: relative
  background: $storyBG
  margin-top: 40px
  padding: 20px
  border-radius: 10px
  overflow: auto
  box-shadow: 0px 0px 2px 1px rgba(208, 223, 226, 0.4) inset
  border: 1px solid rgba(120, 120, 120, 0.1)
  border-width: 0.1rem
  h2
    font: 2.2rem $titleFont
    font-weight: 100
    padding-bottom: 20px
    a
      color: black
      &:hover
        color: $scribemaniaDarkGreen
  a
    color: $scribemaniaGreen
  p
    margin-bottom: 7px
  button
    float: right
    margin-top: 10px
  textarea, input
    font: 1.4rem $storyFont
    box-sizing: border-box
    border-radius: 4px
    width: 100%
    padding: 5px
    border: 1px solid #babdc3
    border-width: 0.1rem
    outline: none
  textarea
    max-width: 100%
    min-height: 80px

section:first-child
  margin-top: 0

section.story
  textarea
    margin-top: 20px
    margin-bottom: 5px
    display: none
  .started-info
    float: right
    text-align: right
    padding-right: 2px
    color: $scribemaniaDarkGreen
    opacity: 0.7
    font-size: 1.2rem
    font-style: italic
    .started-name
      color: black
  .enter-hints, .read-more
    color: $scribemaniaGreen
    font-size: 1.1rem
    font-style: italic
    .start-writing, .login-hint
      margin-top: 25px
      display: none
    .add-paragraph
      display: none
    .typing-users
      color: rgba($scribemaniaDarkGreen, 0.7)
      margin-top: 5px
  .read-more
    margin-top: 15px
  &:last-of-type
    margin-bottom: 100px

.read-more .icon-double-angle-right
  color: $scribemaniaDarkGreen