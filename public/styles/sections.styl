.content
  max-width: $maxContentWidth
  width: 95%
  margin: 0 auto
  position: relative
  line-height: 1.6

@media (min-width: 920px) and (max-width: 1121px)
  .content
    margin-left: 115px
    width: 85%

section
  position: relative
  background: $storyBG
  margin-top: 40px
  padding: 25px
  border-radius: 8px
  overflow: auto
  box-shadow: 0 0 2px 1px rgba(208,223,226,0.5) inset
  border: 2px solid rgba(120,120,120,0.2)
  border-width: 0.1rem
  h2
    font: 2.2rem $titleFont
    font-weight: 100
    line-height: 1.2
    a
      color: black
      &:hover
        color: $scribemaniaBlue
  h2:after, .divider
    // add a "divider" after section titles
    margin-top: 10px
    content: ''
    display: block
    border: 0
    height: 0
    border-top: 1px solid rgba(0, 0, 0, 0.1)
    border-bottom: 1px solid rgba(255, 255, 255, 0.3)
    margin-bottom: 15px
  a
    color: rgba($scribemaniaGreen, 0.7)
  p
    padding: 0 10px
    margin-bottom: 7px
  button
    float: right
    margin-top: 10px
  textarea, input
    font: 1.4rem $storyFont
    box-sizing: border-box
    border-radius: 4px
    width: 100%
    padding: 5px
    border: 1px solid #babdc3
    border-width: 0.1rem
    outline: none
  textarea
    max-width: 100%
    min-height: 80px

section.story
  textarea
    margin-top: 20px
    margin-bottom: 5px
    display: none
  .star
    margin-top: -2px
    float: right
    font-size: 1.1rem
    font-style: italic
    color: rgba($scribemaniaBlue, 0.6)
    a
      color: rgba($scribemaniaBlue, 0.6)
      font-size: 1.6rem
      padding-left: 5px
      &:hover
        color: $scribemaniaBlue
  .started-info
    line-height: 1.6rem
    padding: 0px 4px 15px 4px
    color: $scribemaniaBlue
    color: rgba($scribemaniaBlue, 0.6)
    font-size: 1.2rem
    font-style: italic
    .started-name
      color: rgba($scribemaniaGreen, 0.7)
  .enter-hints, .read-more
    color: $scribemaniaGreen
    font-size: 1.1rem
    font-style: italic
    .start-writing, .login-hint
      margin-top: 25px
      display: none
    .add-paragraph
      display: none
    .typing-users
      color: rgba($scribemaniaBlue, 0.7)
      margin-top: 5px
  .read-more
    margin-top: 15px
  &:last-of-type
    margin-bottom: 150px

.read-more .icon-double-angle-right
  color: $scribemaniaBlue
  color: rgba($scribemaniaBlue, 0.7)