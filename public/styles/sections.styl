.content
  max-width: $maxContentWidth
  margin: 0 auto
  margin-top: 110px
  position: relative
  line-height: 1.6

@media (max-width: 1131px)
  .content
    margin-left: 80px

section
  position: relative
  margin-bottom: 20px
  padding: 25px
  h2
    font: 22px $titleFont
    font-weight: 200
    line-height: 1.2
    a
      color: black
      &:hover
        color: $scribemaniaBlue
  a
    color: $sectionsLinks
  p
    padding: 0 10px
    margin-bottom: 7px
  button
    float: right
    margin-top: 10px

section.story
  .paragraph-input
    margin-top: 20px
    margin-bottom: 5px
    display: none
    max-width: 100%
    box-shadow: inset 0 1px 2px rgba(0,0,0,0.075), 0 0 1px 1px rgba(lighten($scribemaniaGreen, 75%), 0.2)
    padding-bottom: 20px
    .interim-text
      color: grey
  .fa-microphone, .fa-microphone-slash
    display: none
    position: absolute
    bottom: 25px
    right: 40px
    opacity: 0.5
    cursor: pointer
    transition: opacity 0.1s
  .fa-microphone:hover
    opacity: 1
    transition: opacity 0.1s
  .fa-microphone.recording
    opacity: 1
    color: darkred
  .star
    font-family: $titleFont
    margin-top: -2px
    float: right
    font-size: 11px
    font-style: italic
    color: rgba($scribemaniaBlue, 0.6)
    a
      color: rgba($scribemaniaBlue, 0.6)
      font-size: 16px
      padding-left: 5px
      &:hover
        color: $scribemaniaBlue
    .user-starred
      color: #E6DA05
      font-size: 1.2em
  .started-info
    font-family: $titleFont
    line-height: 1.6rem
    padding: 0px 4px 15px 4px
    color: $scribemaniaBlue
    color: rgba($scribemaniaBlue, 0.6)
    font-size: 12px
    font-style: italic
  .enter-hints, .read-more
    font-family: $titleFont
    color: $scribemaniaGreen
    font-size: 11px
    font-style: italic
    .start-writing, .login-hint, .join-group
      margin-top: 25px
      display: none
    .add-paragraph
      display: none
    .typing-users
      color: rgba($scribemaniaBlue, 0.7)
      margin-top: 5px
      height: $bodyFontSize
  .read-more
    margin-top: 15px
  &:last-of-type
    margin-bottom: 100px

section h2:after,
section .divider
  // add a "divider" after section titles
  margin-top: 10px
  content: ''
  display: block
  border: 0
  height: 0
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  border-bottom: 1px solid rgba(255, 255, 255, 0.3)
  margin-bottom: 15px

.read-more .fa-angle-double-right
  color: $scribemaniaBlue
  color: rgba($scribemaniaBlue, 0.7)
