.search-form
  margin-top: 20px
  text-align: center
  font-size: 22px
  & > .search-button
    margin-left: 20px
    margin-bottom: -10px
    line-height: 1.3
    position: absolute

.search-input
  display: inline-block
  background: transparent
  margin-top: 15px
  width: 40%
  box-sizing: border-box
  outline: none
  border: none
  border-bottom: 1px solid rgb(102, 102, 102)
  text-align: center
  box-shadow: none
  font-family: $titleAltFont
  font-weight: 300
  font-size: 22px
  &:focus
    box-shadow: none
    border: none
    border-bottom: 1px solid rgb(102, 102, 102)
