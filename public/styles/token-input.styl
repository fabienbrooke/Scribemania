ul.token-input-list
  overflow: hidden
  width: 100%
  cursor: text
  font-size: 12px
  font-family: Verdana, sans-serif
  z-index: 999
  margin: 0
  margin-bottom: 10px
  padding: 0
  background-color: #fff
  list-style-type: none
  clear: left

  li
    list-style-type: none

    input
      border: 0
      background-color: white
      box-shadow: none
      border: none
      padding: 3px 8px

ul.token-input-disabled,
ul.token-input-disabled li input 
  background-color: #E8E8E8

ul.token-input-disabled

  li.token-input-token
    background-color: #D9E3CA
    color: #7D7D7D

    span
      color: #CFCFCF
      cursor: default

li.token-input-token 
  overflow: hidden
  margin: 3px
  padding: 3px 5px
  background-color: #d0efa0
  color: #000
  font-weight: bold
  cursor: default
  display: block

  p
    float: left
    padding: 0
    margin: 0

  span
    float: right
    color: #777
    cursor: pointer

li.token-input-selected-token 
  background-color: #08844e
  color: #fff

  span
    color: #bbb

div.token-input-dropdown 
  position: absolute
  background-color: #fff
  overflow: hidden
  border-left: 1px solid #ccc
  border-right: 1px solid #ccc
  border-bottom: 1px solid #ccc
  cursor: default
  font-size: 12px
  font-family: Verdana, sans-serif
  z-index: 1

  p
    margin: 0
    padding: 5px
    font-weight: bold
    color: #777

  ul
    margin: 0
    padding: 0

    li
      background-color: #fff
      padding: 3px
      list-style-type: none

      em
        font-weight: bold
        font-style: normal

    li.token-input-dropdown-item
      background-color: #fafafa

    li.token-input-dropdown-item2
      background-color: #fff

    li.token-input-selected-dropdown-item
      background-color: #d0efa0
