@import "nib"

@font-face
  font-family: Museo300Regular
  src: url('/fonts/Museo300-RegularWeb.eot')
  src: url('/fonts/Museo300-RegularWeb.eot?#iefix') format('embedded-opentype'),
       url('/fonts/Museo300-RegularWeb.woff') format('woff')

@font-face
  font-family: 'Raleway'
  src: url('/fonts/raleway_thin-webfont.eot')
  src: url('/fonts/raleway_thin-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/raleway_thin-webfont.woff') format('woff'),
       url('/fonts/raleway_thin-webfont.ttf') format('truetype'),
       url('/fonts/raleway_thin-webfont.svg#raleway-thin') format('svg')

$pageWidth = 1080px
$navWidth = 80px
$navBGGradient = 0
$scribemaniaGreen = #2e7b2d
$scribemaniaComplement = #6E284C
$storyBG = #F4F9F6
$headerBG = #1c1c1c
$storyFont = Museo300Regular, 'Helvetica Neue', 'Helvetica', Arial, sans-serif
$titleFont = Raleway, 'Helvetica Neue', 'Helvetica', Arial, sans-serif

html
  font-size: 62.5%

body
  font-size: 15px
  font: 1.5rem $storyFont
  background: linear-gradient(top, #fff, #F7F7F7) fixed

a
  text-decoration: none
  color: black
  transition: color 0.4s
  &:hover
    color: $scribemaniaGreen
    transition: color 0.1s

header
  font-size: 28px
  font-size: 2.8rem
  background: $headerBG
  background: linear-gradient(top, lighten($headerBG, 5%), black)
  padding: 10px 0
  margin-bottom: 20px
  a
    color: $scribemaniaGreen
  h1, .user
    display: inline-block
    a:hover
      color: lighten($scribemaniaGreen, 10%)
  .user
    font-size: 24px
    font-size: 2.4rem
    float: right
    margin-right: 40px

button
  cursor: pointer
  background-color: lighten($scribemaniaGreen, 75%)
  border: 2px solid darken($scribemaniaGreen, 33%)
  border-width: 0.2rem
  box-shadow: inset 1px -1px 1px lighten($scribemaniaGreen, 33%)
  padding: 4px 10px
  border-radius: 5px
  font-size: 14px
  font: 1.4rem $storyFont
  transition: background-color 0.2s, box-shadow 0.2s
  &:hover, &:focus
    background-color: lighten($scribemaniaGreen, 66%)
    transition: background-color 0.2s
  &:active, &:focus
    outline: none
    box-shadow: none
    transition: box-shadow 0.2s

.page
  max-width: $pageWidth
  margin: 0 auto
  position: relative

 header h1
  margin-left: 40px

nav
  font-size: 18px
  font: 1.8rem $titleFont
  font-weight: 100
  text-align: center
  text-transform: uppercase
  position: absolute
  top: 0
  bottom: 0
  left: 0
  width: $navWidth
  ul
    margin-left: 5px
  li
    list-style: none
    padding: 10px 0 15px 0
  [class^="icon-"]
    margin-bottom: 5px

#content
  margin-left: sum($navWidth 10)
  padding: 10px

h2
  font-size: 22px
  font: 2.2rem $titleFont
  font-weight: 100
  padding-bottom: 15px

section
  position: relative
  background: $storyBG
  margin-top: 40px
  padding: 20px
  border-radius: 10px
  overflow: auto
  a
    color: $scribemaniaGreen
  p
    margin-bottom: 5px
  button
    float: right
    margin-top: 10px
  textarea, input
    font-size: 14px
    font: 1.4rem $storyFont
    box-sizing: border-box
    border-radius: 4px
    width: 100%
    padding: 5px
    border: 1px solid #babdc3
    border-width: 0.1rem
    outline: none
  textarea
    max-width: 100%
    min-height: 80px

section:first-child
  margin-top: 0

section.story
  textarea
    margin-top: 10px
    margin-bottom: 5px
    display: none
  .started-info
    text-align: right
    padding-right: 2px
    color: $scribemaniaComplement
    filter: "alpha(opacity=0.7)"
    opacity: 0.7
    position: absolute
    top: 10px
    top: 1rem
    right: 2%
    font-size: 12px
    font-size: 1.2rem
    font-style: italic
    .started-name
      color: black
  .enter-hints, .read-more
    color: $scribemaniaGreen
    font-size: 11px
    font-size: 1.1rem
    font-style: italic
    .start-writing
      margin-top: 25px
    .add-paragraph
      display: none
  .read-more
    margin-top: 15px


label, input, textarea
  display: block

label
  margin-bottom: 5px

input, .add-story textarea
  margin-bottom: 10px
  transition: all .3s ease-in-out
  &:focus
    border: 1px solid lighten($scribemaniaGreen, 5%)
    box-shadow: 0 0 1px 1px lighten($scribemaniaGreen, 10%)
    transition: all .2s ease-out

.genres
  text-align: center

.typekit-badge
  display: none !important