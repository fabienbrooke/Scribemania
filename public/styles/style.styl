@import "nib"

global-reset()

html5-reset()

$navWidth = 15%
$navBGGradient = 0
$scribemaniaGreen = #296e28
$storyBG = #F4F9F6
$headerBG = #1c1c1c

@font-face 
  font-family: 'Gibson-Regular'
  src: url('../fonts/Gibson-Regular.eot')
  src: url('../fonts/Gibson-Regular.eot?#iefix') format('embedded-opentype'),
       url('../fonts/Gibson-Regular.woff') format('woff'),
       url('../fonts/Gibson-Regular.ttf') format('truetype')
  font-weight: normal
  font-style: normal

html
  font-size: 62.5%
body
  font-size: 14px
  font: 1.4rem museo, "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: black
header
  a
    color: $scribemaniaGreen
  font-size: 28px
  text-align: center
  background: $headerBG
  background: linear-gradient(top, lighten($headerBG, 5%), black);
  padding: 10px 0
nav
  font-size: 18px
  font: 1.8rem raleway
  text-transform: uppercase
  text-shadow: 0 1px 0 rgba(#536056)
  position: fixed
  top: 53px
  left: 0
  bottom: 0
  width: $navWidth
  min-width: 90px
  text-align: center
  border-right: 1px solid #E3E3E3
  overflow: hidden
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.1)
  background: linear-gradient(left, white, $storyBG);

  li
    list-style: none
    padding: 10px
    border-bottom: 1px solid #E3E3E3

#content
  margin: 0 $navWidth
  padding: 20px
  textarea
    padding: 0 auto
    margin-top: 20px
    width: 99%
    height: 80px
    border-radius: 2px
.story
  background: $storyBG
  padding: 20px
  border-radius: 10px

a
  text-decoration: none
  &:hover
    color: lighten($scribemaniaGreen, 5%)
h2
  font-family: raleway
  text-align: center
  color: darken($scribemaniaGreen, 50%)
  padding-bottom: 15px
  font-size: 24px
  font-size: 2.4rem
em
  font-style: italic